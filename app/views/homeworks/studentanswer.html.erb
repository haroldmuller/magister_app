
<% if @user.partner_id != nil %>
	<div style="text-align: center">
		<div style="text-align:left">
			<h1>Respuesta</h1>
			<br>
			<%= button_to 'Volver',homework_path(@homework),  :class=>"btn btn-primary", :style=>'color:white' %>
		</div>
		<br>
		<h3><%=@homework.content %></h3>
		<% if @homework.image? %>
			<p><%= image_tag @homework.image.url(:medium) %></p>
		<% end %>
		<% if @homework.actual_phase == "responder" %>
			<h4>Respuesta:</h4>
			<% if @answer.responder != nil %>
		  	<h4><em><%= @answer.responder %></em></h4>
			<% end %>
			<% if @answer.image_responder? %>
				<p><%= image_tag @answer.image_responder.url(:medium) %></p>
			<% end %>
		<% elsif @homework.actual_phase == "argumentar" %>
			<br>
			<h4><%= "En base a la siguiente respuesta discuta y argumente su contenido:" %></h4>
			<% if @partner_answer.responder != nil %>
				<em><h4><%=@partner_answer.responder %></h4></em>
			<% end %>
			<% if @partner_answer.image_responder? %>
				<p><%= image_tag @partner_answer.image_responder.url(:medium) %></p>
			<% end %>
			<h4>Argumentación:</h4>
			<% if @answer.argumentar != nil %>
				<h4><em><%= @answer.argumentar %></em></h4>
			<% end %>
			<% if @answer.image_argumentar? %>
				<p><%= image_tag @answer.image_argumentar.url(:medium) %></p>
			<% end %>
		<% elsif @homework.actual_phase == "rehacer" %>
			<br>
			<h4>Primera respuesta:</h4>
			<% if @answer.responder != nil %>
				<em><h4><%="\"" + @answer.responder + "\""%></h4></em>
			<% end %>
			<% if @answer.image_responder? %>
				<p><%= image_tag @answer.image_responder.url(:medium) %></p>
			<% end %>
			<br>
			<h4>Argumentación:</h4>
			<% if @partner_answer.argumentar != nil %>
				<em><h4><%= @partner_answer.argumentar %></h4></em>
			<% end %>
			<% if @partner_answer.image_argumentar? %>
				<p><%= image_tag @partner_answer.image_argumentar.url(:medium) %></p>
			<% end %>
			<br>
			<h4>Respuesta final:</h4>
			<% if @answer.rehacer != nil %>
	    	<em><h4><%= @answer.rehacer %></h4></em>
			<%end%>
	    <% if @answer.image_rehacer?%>
	    	<p><%= image_tag @answer.image_rehacer.url(:medium) %></p>
	    <%end%>
		<%end%>
	</div>
<%end%>
