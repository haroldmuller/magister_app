
<div style="text-align: left">
	<div style="text-align:left">
		<h1><%= @homework.name %></h1>
		<h2><%= @ciclo %> - <%= @etapa %></h2>
		<br>
		<%= simple_format(@homework.content, {style:"font-size:20px", align:"justify"})%>
		<% if @homework.image? %>
			<p><%= image_tag @homework.image.url(:medium) %></p>
		<% end %>
		<br>
		<%= button_to 'Volver',homework_path(@homework), :class=>"btn btn-primary", :style=>'color:white' %>
	</div>
	<br>
	<% if @my_answer != nil || @partner_answer != nil %>
		<h3><b>Ciclo 1</b></h3>
		<h3>Respuesta</h3>
		<% if @my_answer.responder != nil %>
			<%= simple_format(@my_answer.responder, {style:"font-size:15px", align:"justify"})%>
			<% if @my_answer.image_responder? %>
				<p><%= image_tag @my_answer.image_responder.url(:medium) %></p>
			<% end %>
		<% end %>
			<br>
			<% if @homework.actual_phase != "responder" %>
				<h3>Argumentaci√≥n</h3>
				<% if @partner_answer.argumentar != nil %>
					<%= simple_format(@partner_answer.argumentar, {style:"font-size:15px", align:"justify"})%>
					<% if @partner_answer.image_argumentar? %>
						<p><%= image_tag @partner_answer.image_argumentar.url(:medium) %></p>
					<% end %>
				<% end %>
				<br>
				<% if @homework.actual_phase != "argumentar" %>
					<h3>Rehacer</h3>
					<% if @my_answer.rehacer != nil %>
						<div class="">
							<%= simple_format(@my_answer.rehacer, {style:"font-size:15px", align:"justify"})%>
							<% if @my_answer.image_rehacer?%>
								<p><%= image_tag @my_answer.image_rehacer.url(:medium) %></p>
							<%end%>
						</div>
					<% end %>
					<br>
					<% if @homework.actual_phase != "rehacer" %>
						<h3><b>Ciclo 2</b></h3>
						<% if @partner_answer.responder_2 != nil %>
							<h3>Responder</h3>
							<%= simple_format(@partner_answer.responder_2, {style:"font-size:15px", align:"justify"}) %>
						<%end%>
						<% if @partner_answer.image_responder_2?%>
							<p><%= image_tag @partner_answer.image_responder_2.url(:medium) %></p>
						<%end%>
						<br>
						<% if @homework.actual_phase != "responder_2" %>
							<h3>Argumentar</h3>
							<% if @my_answer.argumentar_2 != nil %>
								<%= simple_format(@my_answer.argumentar_2, {style:"font-size:15px", align:"justify"}) %>
							<%end%>
							<% if @my_answer.image_argumentar_2?%>
								<p><%= image_tag @my_answer.image_argumentar_2.url(:medium) %></p>
							<%end%>
							<% if @homework.actual_phase != "argumentar_2" %>
								<h3>Rehacer</h3>
								<% if @my_answer.rehacer_2 != nil %>
									<%= simple_format(@my_answer.rehacer_2, {style:"font-size:15px", align:"justify"}) %>
								<%end%>
								<% if @my_answer.image_rehacer_2?%>
									<p><%= image_tag @my_answer.image_rehacer_2.url(:medium) %></p>
								<%end%>
							<%end%>
						<%end%>
					<%end%>
				<%end%>
		<%end%>
	<%end%>
	<br>
</div>
