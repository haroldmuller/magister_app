<h1><%= @homework.name %></h1>
<h4>Etapa: <%= @homework.actual_phase %></h4>

<h3><b>Pregunta:</b> <%= @homework.content%></h3>
<%= form_tag controller:"homeworks", action:"change_phase", method:"post" do %>
  <% if @homework.actual_phase == "responder"%> <!-- AQUI VA LA FASE NO ACTIVA -->
    <%= link_to 'Volver', homeworks_path,  :class=>"btn btn-primary", :style=>'color:white' %>
  <% elsif @homework.actual_phase == "argumentar"%>
    <%= submit_tag "Volver", name: 'previous', class: "btn btn-primary"%>
  <%else%>
    <%= submit_tag "Volver", name: 'previous', class: "btn btn-primary"%>
  <% end %>
  <div class="column">
    <div class="col-sm-70 col-md-5">
      <br>
      <div class="thumbnail">
        <div class="caption">
          <br></br>
          <br></br>
            <%= fields_for 'phase', @homework do |p| %>
              <%= p.hidden_field  :phase, value:@homework.actual_phase, class:"form-control" %>
              <% if @homework.actual_phase == "responder" && current_user.role?%>
                <div class="actions" style="text-align: center">
                  <%= submit_tag "Argumentar", name: 'next', class: "btn btn-primary", style:"height:75px; width:150px; font-size:20px"%>
                  <%= link_to 'Discusión', homeworks_path,  :class=>"btn btn-primary", :style=>'color:white; height:75px; width:150px; font-size:20px; line-height: 60px' %>
                </div>
              <% elsif @homework.actual_phase == "argumentar" && current_user.role?%>
                <div class="actions" style="text-align: center">
                  <%= submit_tag "Rehacer", name: 'next', class: "btn btn-primary", style:"height:75px; width:150px; font-size:20px"%>
                  <%= submit_tag "Discusión", name: 'previous', class: "btn btn-primary", style:"height:75px; width:150px; font-size:20px"%>
                </div>
              <% elsif @homework.actual_phase == "rehacer" && current_user.role?%>
                <div class="actions" style="text-align: center">
                  <%= submit_tag "Discusión", name: 'next', class: "btn btn-primary", style:"height:75px; width:150px; font-size:20px"%>
                </div>
              <%end%>
            <%end%>
            <br>
            <br>
          </div>
        </div>
      </div>
    </div>
<%end%>


<br></br>
<br></br>
<br></br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Respuesta</th>
    </tr>
  </thead>
  <tbody>
    <% @users.sort_by{|e| e[:last_name]}.each do |user| %>
      <% if user.role == "alumno"%>
      <tr>
        <td><%= user.last_name%></td>
        <td><%= user.first_name%></td>
        <td><%= link_to "Ver Respuesta", user, :class=>"btn btn-primary btn-xs", :style=>'color:white'%></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
