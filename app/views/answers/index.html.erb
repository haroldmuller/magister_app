<h2><%= "Su respuesta fue enviada, ahora debe esperar para la siguiente etapa." %></h2>
<% if current_user.partner_id != nil %>
	<div style="text-align: center">
		<% @homework = Homework.where(id:params["homework_id"])[0]%>
		<% if @homework.actual_phase == "responder" %>
			<br>
			<h3><%=@homework.content %></h3>
			<% if @homework.image? %>
				<p><%= image_tag @homework.image.url(:medium) %></p>
			<% end %>

			<% partner = User.find_by_id(current_user.partner_id) %>
			<% partner_answer = partner.answers.find_by_homework_id(@homework.id) %>
			<% answer = current_user.answers.find_by_homework_id(@homework.id) %>

			<% if answer != nil %>
				<% if @homework.actual_phase == "responder" %>
					<h4>Respuesta: </h4>
			    <h4><em><%= answer.responder %></em></h4>
					<% if answer.image? %>
						<p><%= image_tag answer.image.url(:medium) %></p>
					<% end %>
				<% elsif @homework.actual_phase == "argumentar" %>
					<h4><%= "En base a la respuesta de %s %s, discuta y argumente su contenido:" % [partner.first_name, partner.last_name] %></h4>
					<em><h4><%=partner_answer.responder %></h4></em>
					<% if partner_answer.image? %>
						<p><%= image_tag partner_answer.image.url(:medium) %></p>
					<% end %>
					<h4>Argumentación de <%=current_user.first_name + " " + current_user.last_name %>: </h4>
					<h4><em><%= answer.argumentar %></em></h4>
					<% if answer.image? %>
						<p><%= image_tag answer.image.url(:medium) %></p>
					<% end %>
				<% elsif @homework.actual_phase == "rehacer" %>
					<br>
					<h4>Primera respuesta de <%=current_user.first_name + " " + current_user.last_name%> :</h4>
					<em><h4><%="\"" + answer.responder + "\""%></h4></em>
					<% if answer.image? %>
						<p><%= image_tag answer.image.url(:medium) %></p>
					<% end %>
					<br>
					<h4>Argumentación de <%= partner.first_name + " " + partner.last_name%> :</h4>
					<em><h4><%=partner_answer.argumentar %></h4></em>
					<% if partner_answer.image? %>
						<p><%= image_tag partner_answer.image.url(:medium) %></p>
					<% end %>
					<br>
					<h4>Respuesta final de <%= current_user.first_name + " " + current_user.last_name%> :</h4>
			        <em><h4><%=answer.rehacer %></h4></em>
			        <% if answer.image?%>
			        	<p><%= image_tag answer.image.url(:medium) %></p>
			        <%end%>
				<%end%>
			<%end%>
		<%end%>
    <br></br>
        <%= form_tag controller:"homeworks", method:"get" do %>
          <%= fields_for 'actualizar', @homework do |p| %>
						<%= p.hidden_field  :homework, value:@homework.id, class:"form-control" %>
						<%= p.hidden_field  :phase, value:@homework.actual_phase, class:"form-control" %>
						<% if @homework.upload%>
            	<%= submit_tag "Editar Respuesta", name: 'tag_in_index', class: "btn btn-primary", action:"show", style:"height:35px; width:130px"%>
						<%end%>
						<%= submit_tag "Actualizar", name: 'tag_in_index', id:@homework.id, class: "btn btn-primary", action:"actualizar", style:"height:35px; width:130px"%>
          <%end%>
        <%end%>
    <br></br>
	</div>
<%end%>
