
<div style="text-align: center">
    <%= form_for([@homework, @answer], html: { multipart: true }) do |f| %>
      <% if @answer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>
          <ul>
          <% @answer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <form class="form-horizontal">

          <div class="form-group">
            <label for="question" class="col-sm-9 control-label">Respuesta</label>
            <div class="col-sm-offset-4">
              <div class="col-xs-6">
                <% if @homework.actual_phase == "responder"%>
                  <%= f.text_area :responder, cols: 40, rows: 5, id:"answer", class:"form-control", placeholder: 'Ingrese respuesta' %>
                <% elsif @homework.actual_phase == "argumentar"%>
                  <%= f.text_area :argumentar, cols: 40, rows: 5, id:"answer", class:"form-control", placeholder: 'Ingrese respuesta' %>
                <% elsif @homework.actual_phase == "rehacer"%>
                  <%= f.text_area :rehacer, cols: 40, rows: 5, id:"answer", class:"form-control", placeholder: 'Ingrese respuesta' %>
                <% elsif @homework.actual_phase == "evaluar"%>
                  <%= f.text_area :evaluar, cols: 40, rows: 5, id:"answer", class:"form-control", placeholder: 'Ingrese respuesta' %>
                <% elsif @homework.actual_phase == "final"%>
                  <%= f.text_area :final, cols: 40, rows: 5, id:"answer", class:"form-control", placeholder: 'Ingrese respuesta' %>
                <% end %>
                <br>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="question" class="col-sm-9 control-label">Imagen</label>
            <div class="col-sm-offset-4">
              <div class="col-xs-6">
                <% if @homework.actual_phase == "responder"%>
                  <%= f.file_field :image_responder, id:"i_answer"%>
                <% elsif @homework.actual_phase == "argumentar"%>
                  <%= f.file_field :image_argumentar, id:"i_answer"%>
                <% elsif @homework.actual_phase == "rehacer"%>
                  <%= f.file_field :image_rehacer, id:"i_answer"%>
                <% elsif @homework.actual_phase == "evaluar"%>
                  <%= f.file_field :image_evaluar, id:"i_answer"%>
                <% elsif @homework.actual_phase == "final"%>
                  <%= f.file_field :image_final, id:"i_answer"%>
                <% end %>
                <br>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="span4">
                <div class="spacer10"></div>
            </div>
          </div>
          <br></br>

          <div class="form-group" id= "sub">
            <div class="col-sm-offset-2 col-sm-8">
              <div class="actions">
                <%= f.submit :'Enviar Respuesta', :class=>"btn btn-primary", :style=>'color:white' %>
              </div>
            </div>
          </div>
      </form>
    <% end %>
</div>
