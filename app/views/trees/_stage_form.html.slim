h3 Fase #{t stage}

.container-fluid
  = f.simple_fields_for "#{stage}_simple_feedback" do |f|
    = f.input :text, class: 'form-control', required: false, label: "Feedback simple"
  = f.simple_fields_for "#{stage}_complex_feedback" do |f|
    = f.input :text, class: 'form-control', required: false, label: "Feedback complejo"

  = render 'question_form', f: f, stage: stage, type: 'content'
  = render 'question_form', f: f, stage: stage, type: 'ct'