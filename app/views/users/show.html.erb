<h3>Usuario</h3>
<p>Nombre: <%= @user.first_name if @user.first_name %> <%= @user.last_name if @user.last_name %></p>
<p>Correo: <%= @user.email if @user.email %></p>

<%= form_for(@user) do |f| %>
	<%= f.check_box :asistencia %> <%= @user.first_name + ' ' + @user.last_name%>
	<br>
	<%= f.submit :'Aceptar' %>
<% end %>
