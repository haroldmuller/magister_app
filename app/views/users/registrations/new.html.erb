<div style="text-align: center">
  <h2>Nueva Cuenta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <form class="form-horizontal">

      <div class="form-group">
        <label for="emailInput" class="col-sm-9 control-label">Correo</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6">
            <%= f.email_field :email, autofocus: true, id:"emailInput", class:"form-control", placeholder: 'Ingrese su correo' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="nameInput" class="col-sm-9 control-label">Nombre</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6">
            <%= f.text_field :first_name, autofocus: true , id:"nameInput", class:"form-control", placeholder: 'Ingrese su nombre' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="lastnameInput" class="col-sm-9 control-label">Apellido</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6">
            <%= f.text_field :last_name, autofocus: true , id:"lastnameInput", class:"form-control", placeholder: 'Ingrese su apellido' %>
          </div>
        </div>

      <div class="form-group">
        <label for="passwordInput" class="col-sm-9 control-label">Contraseña</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6">
            <% if @minimum_password_length %>
              <% end %>
            <%= f.password_field :password, autocomplete: "off" , id:"passwordInput", class:"form-control", placeholder: 'Ingrese su contraseña (6 carácteres mínimo)' %>
          </div>
        </div>

      <div class="form-group">
        <label for="passwordConfirmInput" class="col-sm-10 control-label">Confirmar Contraseña</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6">
            <%= f.password_field :password_confirmation, autocomplete: "off" , id:"passwordConfirmInput", class:"form-control", placeholder: 'Confirmar contraseña' %>
          </div>
        </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <span class="help-block"></span>
          <div class="actions">
            <%= f.submit "Crear Cuenta" %>
          </div>
        </div>
      </div>
    </form>
  <% end %>
  <%= render "users/shared/links" %>
</div>
